<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyRecipeBookMaker.Views.RecipeCollection"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dx="clr-namespace:DevExpress.Maui.Core;assembly=DevExpress.Maui.Core"
    xmlns:dxco="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
    xmlns:dxcv="clr-namespace:DevExpress.Maui.CollectionView;assembly=DevExpress.Maui.CollectionView"
    xmlns:fonts="clr-namespace:MyRecipeBookMaker.Common"
    xmlns:local="clr-namespace:MyRecipeBookMaker"
    xmlns:models="clr-namespace:MyRecipeBookMaker.Models"
    xmlns:radialMenu="clr-namespace:Syncfusion.Maui.RadialMenu;assembly=Syncfusion.Maui.RadialMenu"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="RecipesView">

    <ContentPage.Resources>

        <DataTemplate x:Key="itemTemplate" x:DataType="models:Recipe">

            <Border
                Margin="10"
                Padding="0"
                BackgroundColor="{dx:ThemeColor Surface}"
                HorizontalOptions="Fill"
                MaximumWidthRequest="400"
                Stroke="{dx:ThemeColor Outline}"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1"
                VerticalOptions="Fill"
                WidthRequest="500">
                <Grid
                    BackgroundColor="{dx:ThemeColor Primary}"
                    ColumnDefinitions="120, *"
                    ColumnSpacing="0"
                    HeightRequest="120"
                    RowSpacing="0">

                    <!--  Image to display the Item  -->
                    <Image
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        Aspect="AspectFill"
                        BackgroundColor="{DynamicResource Gray-200}"
                        HeightRequest="120"
                        Source="{Binding ImageData}"
                        WidthRequest="120" />


                    <Grid
                        Grid.Column="1"
                        Margin="4"
                        ColumnDefinitions="*,20"
                        HorizontalOptions="Fill"
                        RowDefinitions="*,*"
                        VerticalOptions="Start">
                        <ImageButton
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:RecipeCollectionViewModel}}, Path=DisplayPopupCommand}" CommandParameter="{Binding .}"
                            HeightRequest="20"
                            HorizontalOptions="End"
                            VerticalOptions="Center"
                            WidthRequest="20"
                            ZIndex="2">
                            <ImageButton.Source>
                                <FontImageSource
                                    FontFamily="IMD"
                                    Glyph="{x:Static fonts:IconsMaterialDesign.DotsHorizontalCircle}"
                                    Size="20"
                                    Color="{dx:ThemeColor OnPrimary}" />
                            </ImageButton.Source>
                        </ImageButton>
                        <!--  Name of the item  -->
                        <Label
                            Grid.Row="0"
                            HorizontalOptions="Start"
                            HorizontalTextAlignment="Start"
                            Style="{StaticResource BodySmallLabelStyle}"
                            Text="{Binding Name}"
                            VerticalOptions="Start" />
                        <Label
                            HeightRequest="0"
                            HorizontalOptions="Start"
                            HorizontalTextAlignment="Start"
                            IsEnabled="False"
                            IsVisible="{Binding Status}"
                            MaxLines="5"
                            Style="{StaticResource ErrorIconLabelStyle}"
                            Text="{Binding ProcessingMessage}"
                            ZIndex="2" />
                        <!--  Description about the item  -->
                        <Label
                            Grid.Row="1"
                            Margin="0,2,10,8"
                            HorizontalOptions="Start"
                            HorizontalTextAlignment="Start"
                            LineBreakMode="TailTruncation"
                            MaxLines="8"
                            Style="{StaticResource BodyMicroLabelStyle}"
                            Text="{Binding Description}" />

                        <!--  Average rating from the overall rating  -->

                    </Grid>
                </Grid>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:RecipeCollectionViewModel}}, Path=ItemTappedCommand}" CommandParameter="{Binding .}" />
                </Border.GestureRecognizers>
            </Border>

        </DataTemplate>


    </ContentPage.Resources>
    <Grid
        Margin="5,10,5,0"
        x:DataType="local:RecipeCollectionViewModel"
        BackgroundColor="{dx:ThemeColor Surface}"
        RowDefinitions="40,*"
        ColumnDefinitions="*"
        SizeChanged="Grid_SizeChanged">

        <radialMenu:SfRadialMenu
            x:Name="addMenu"
            Grid.Row="0"
            Grid.RowSpan="2"
            CenterButtonRadius="25"
            CenterButtonText="Add"
            Closing="addMenu_Closing"
            IsOpen="{Binding ShowAddMenu}"
            IsVisible="True"
            Opening="addMenu_Opening"
            Point="{Binding AddMenuPoint}"
            RimRadius="180"
            ZIndex="20">

            <radialMenu:SfRadialMenu.Items>
                <radialMenu:SfRadialMenuItem
                    Command="{Binding AddRecipeoByPdfCommand}"
                    FontSize="10"
                    Text="PDF" />
                <radialMenu:SfRadialMenuItem
                    Command="{Binding AddRecipeByCameraCommand}"
                    FontSize="10"
                    Text="Camera" />
                <radialMenu:SfRadialMenuItem
                    Command="{Binding AddRecipeByPhotoByAlbumCommand}"
                    FontSize="10"
                    Text="Album" />
            </radialMenu:SfRadialMenu.Items>
        </radialMenu:SfRadialMenu>

        <dxcv:DXCollectionView
            Grid.Row="1"
            BackgroundColor="Transparent"
            ItemSpanCount="{Binding ColumnsCount}"
            ItemTemplate="{x:StaticResource itemTemplate}"
            ItemsSource="{Binding ListOfRecipes}" />


    </Grid>
</ContentPage>
