<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="MyRecipeBookMaker.Styles.ListViewStyles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:listView="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView">

    <Style x:Key="TransparentSelectionListView" TargetType="listView:SfListView">
        <Setter Property="BackgroundColor" Value="{DynamicResource Gray-Bg}" />
        <Setter Property="SelectionBackground" Value="Transparent" />
        <Setter Property="ScrollBarVisibility" Value="Never" />
        <Setter Property="VerticalOptions" Value="Fill" />
    </Style>

</ResourceDictionary>