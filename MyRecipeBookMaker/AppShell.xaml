<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyRecipeBookMaker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fonts="clr-namespace:MyRecipeBookMaker.Common"
    xmlns:local="clr-namespace:MyRecipeBookMaker"
    xmlns:views="clr-namespace:MyRecipeBookMaker.Views"
    Title="MyRecipeBookMaker">

    <Shell.TitleView>
        <Label
            x:Name="pageTitle"
            FontSize="Large"
            Margin="10,0"
            HorizontalOptions="Center"
            Text="Recipes Book Maker"
            VerticalOptions="Center" />
   
    </Shell.TitleView>

    <ShellContent
        Title="Cards"
        ContentTemplate="{DataTemplate views:RecipeCollection}"
        Route="RecipeCollection" />

</Shell>
